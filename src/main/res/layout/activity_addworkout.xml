<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232"
    android:orientation="vertical"
    tools:context=".AddWorkout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:fontFamily="sans-serif-light"
            android:text="Add Workout"
            android:textColor="#F34A4A"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#333232"
            android:fontFamily="sans-serif"
            android:text="Save"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#EDE5E5"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#656262"
                android:hint="Enter Workout Name" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Exercices (at least one)"
                android:textColor="#EDE5E5"
                android:textSize="20sp" />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ScrollView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_exe1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:backgroundTint="#656262"
                    android:hint="exercice 1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editText_exe2"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#656262"
                            android:hint="exercice 2" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editText_exe3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="20dp"
                                android:backgroundTint="#656262"
                                android:hint="exercice 3" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_exe4"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="20dp"
                                    android:backgroundTint="#656262"
                                    android:hint="exercice 4" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="20dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/editText_exe5"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:layout_marginBottom="20dp"
                                        android:backgroundTint="#656262"
                                        android:hint="exercice 5" />

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/editText_exe6"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_marginBottom="20dp"
                                            android:backgroundTint="#656262"
                                            android:hint="exercice 6" />

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/editText_exe7"
                                                android:layout_width="match_parent"
                                                android:layout_height="30dp"
                                                android:backgroundTint="#656262"
                                                android:hint="exercice 7" />
                                        </com.google.android.material.textfield.TextInputLayout>
                                    </com.google.android.material.textfield.TextInputLayout>
                                </com.google.android.material.textfield.TextInputLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                        </com.google.android.material.textfield.TextInputLayout>
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</LinearLayout>